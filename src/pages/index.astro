---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import ContentLayout from "@layouts/ContentLayout.astro";
import PostsList from "@components/PostsList.astro";
import { SITE_NAME, SNS_LINKS } from "src/consts.ts";
import profileIcon from "@assets/profileIcon.png";
import Nerd from "src/components/nerd/Nerd.astro";

const posts = await getCollection("posts");
---

<ContentLayout>
  <div class="hero">
    <Image class="profileIcon" src={profileIcon} alt="profile icon" />
    <p class="siteName">{SITE_NAME}</p>
  </div>
  <div class="contentWrapper">
    <div class="content">
      <p class="navigationText">Posts</p>
      <div class="postsList">
        {posts.length ? <PostsList posts={posts} /> : <p class="noPostText">記事がありません</p>}
      </div>
    </div>
  </div>
</ContentLayout>

<style lang="scss">
  @use "@styles/basePalette.scss";

  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin: 50px 0 70px 0;

    & > .profileIcon {
      width: 130px;
      height: 130px;
      border-radius: 65px;
    }

    & > .siteName {
      font-size: 30px;
      font-weight: 700;
      text-align: center;
    }
  }
  .contentWrapper {
    width: 100%;
    height: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: basePalette.$lightBlue;

    & > .content {
      width: 100%;
      max-width: 950px;
      box-sizing: border-box;
      padding: 36px;

      & > .navigationText {
        font-size: 24px;
        font-weight: 600;
        color: basePalette.$darkGray;
      }

      & > .postsList {
        display: flex;
        flex-direction: column;
        align-items: center;

        & > .noPostText {
          padding: 125px 0;
          color: basePalette.$gray;
          font-weight: 500;
        }
      }
    }
  }

  @media screen and (max-width: 600px) {
    .hero {
      & > .profileIcon {
        width: 100px;
        height: 100px;
        border-radius: 50px;
      }

      & > .siteName {
        font-size: 20px;
      }
    }
  }
</style>
