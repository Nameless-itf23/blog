---
import { Image } from "astro:assets";
import { SITE_NAME } from "src/consts.ts";
import profileIcon from "@assets/profileIcon.png";
---

<header>
  <Image class="profileIcon" src={profileIcon} alt="" />
  <p class="siteName">{SITE_NAME}</p>
</header>

<style lang="scss">
  @import "@styles/vars.scss";
  header {
    width: 100%;
    height: 60px;
    padding: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: $white;
    & > .profileIcon {
      width: 40px;
      height: 40px;
      margin: 0 10px 0 0;
      border-radius: 20px;
    }
    & > .siteName {
      font-size: 1.2em;
      font-weight: 700;
    }
  }
</style>
