---
import { Image } from "astro:assets";
import { SITE_NAME } from "src/consts.ts";
import profileIcon from "@assets/profileIcon.png";
---

<header>
  <Image class="profileIcon" src={profileIcon} alt="profile icon" />
  <p class="siteName">{SITE_NAME}</p>
</header>

<style lang="scss">
  @use "@styles/basePalette.scss";

  header {
    width: 100%;
    height: 60px;
    padding: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    background-color: basePalette.$white;

    & > .profileIcon {
      width: 40px;
      height: 40px;
      border-radius: 20px;
    }

    & > .siteName {
      font-size: 19px;
      font-weight: 700;
      color: basePalette.$black;
    }
  }
</style>
