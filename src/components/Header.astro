---
import { Image } from "astro:assets";
import Nerd from "./nerd/Nerd.astro";
import { SITE_NAME, SNS_LINKS, POSTSLISTPAGE_URL } from "src/consts";
import profileIcon from "@assets/profileIcon.png";
---

<header>
  <div class="infomation">
    <a href={POSTSLISTPAGE_URL} class="siteTitle">
      <Image class="profileIcon" src={profileIcon} alt="profile icon" />
      <p class="siteName">{SITE_NAME}</p>
    </a>
    <div class="snsLinks">
      {
        Object.entries(SNS_LINKS).map(([name, link]) => (
          <a href={link} class="snsLink">
            <Nerd iconName={name} />
          </a>
        ))
      }
    </div>
  </div>
</header>

<style lang="scss">
  @use "@styles/basePalette.scss";

  header {
    width: 100%;
    height: 60px;
    background-color: basePalette.$white;
    display: flex;
    align-items: center;
    justify-content: center;

    & > .infomation {
      width: 100%;
      max-width: 1400px;
      display: flex;
      flex: row;
      justify-content: space-between;
      align-items: center;
      padding: 0 24px;

      & > .siteTitle {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 20px;

        & > .profileIcon {
          width: 40px;
          height: 40px;
          border-radius: 20px;
        }

        & > .siteName {
          font-size: 19px;
          font-weight: 600;
          color: basePalette.$black;
        }
      }

      & > .snsLinks {
        display: flex;
        flex-direction: row;
        gap: 24px;
        align-items: center;

        & > .snsLink {
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 32px;
        }
      }
    }
  }
</style>
