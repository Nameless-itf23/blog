---
import { toResolvedName, toCssName } from "@components/nerd/NerdUtils";

export type Props = {
  iconName: string;
};

const { iconName } = Astro.props;

const resolvedName = toResolvedName(iconName);
const cssName = toCssName(iconName);
---

<i class=`nf ${resolvedName} ${cssName}`></i>
<style lang="scss">
  @use "@styles/basePalette.scss";
  @use "@styles/catppuccin.scss";

  .heart {
    color: catppuccin.$red;
  }

  .typescript {
    color: catppuccin.$blue;
  }

  .git {
    color: catppuccin.$peach;
  }

  .github {
    color: basePalette.$black;
  }

  .twitter {
    color: catppuccin.$sky;
  }

  .linux {
    color: basePalette.$black;
  }

  .archlinux {
    color: catppuccin.$sky;
  }

  .react {
    color: catppuccin.$sky;
  }

  .sass {
    color: catppuccin.$pink;
  }

  .default {
    color: catppuccin.$sky;
  }
</style>
